<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_height="45dp"
        android:layout_width="45dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_image" />





    <TextView
        android:id="@+id/receiver_msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:layout_toRightOf="@+id/message_profile_image"
        android:background="@drawable/receiver_msgs_layout"
        android:padding="10dp"
        android:text="Receiever msgs here"
        android:textColor="#444343"
        android:textSize="14sp"
        />


    
    <ImageView
        android:id="@+id/msg_sender_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:background="@drawable/imageborder"/>



    <ImageView
        android:id="@+id/msg_receiver_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:layout_marginStart="50dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:background="@drawable/imageborder"/>

    <TextView
        android:id="@+id/sender_msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/receiver_msg_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sender_msgs_layout"
        android:textColor="#444343"
        android:padding="10dp"
        android:text="sender msgs"
        android:textSize="14sp"



        />


</RelativeLayout>